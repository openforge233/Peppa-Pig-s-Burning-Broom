# 重置倒计时
scoreboard players set @s countdown 100

execute as @s run summon armor_stand ~ ~2 ~ {CustomName:"\"\"",NoGravity:1b,Invisible:1b,Marker:1b,CustomNameVisible:1b,Tags:["progress"]}
execute as @s run summon minecraft:armor_stand ~ ~ ~ {Invisible:1b,Marker:1b,ArmorItems:[{},{},{},{id:"farmersdelight:straw_bale",Count:1}],Tags:["fake_block"]}
scoreboard players set @e[type=armor_stand,tag=progress,limit=1] countdown 100

execute as @s run function 2p2b:lychee/ethanol_fermentation/loading_line